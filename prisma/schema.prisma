generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  ACCOUNTANT
  TEACHER
}

model User {
  id        String   @id @default(cuid())
  phone     String   @unique
  name      String?
  role      Role
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Dish {
  id         String        @id @default(cuid())
  name       String        @unique
  products   DishProduct[]
  dayDishes  DayDish[]
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
}

model Product {
  id        String        @id @default(cuid())
  name      String        @unique
  dishes    DishProduct[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model DishProduct {
  id         String   @id @default(cuid())
  dish       Dish     @relation(fields: [dishId], references: [id])
  dishId     String
  product    Product  @relation(fields: [productId], references: [id])
  productId  String
  weight     Float
  @@unique([dishId, productId])
}

model Day {
  id         String    @id @default(cuid())
  date       DateTime  @unique
  countKids  Int
  dayDishes  DayDish[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model DayDish {
  id         String   @id @default(cuid())
  day        Day      @relation(fields: [dayId], references: [id])
  dayId      String
  dish       Dish     @relation(fields: [dishId], references: [id])
  dishId     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  @@unique([dayId, dishId])
}
